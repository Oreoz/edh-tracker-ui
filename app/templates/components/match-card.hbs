<div class="card">
  <div class="card-body m-2">
    <h5 class="card-title">
      {{match.name}}
      <span class="badge badge-default badge-pill pull-right">{{match.displaySize}}</span>
    </h5>

    <div class="pull-right">
      {{#if currentUserIsInMatch}}
        {{#link-to 'matches.show' match.id tagName="button" class="btn btn-primary"}}
          Re-Enter Match!
        {{/link-to}}
      {{else}}
        <button class="btn btn-primary btn-join-match" disabled={{match.isFull}} {{action 'joinMatch'}}>
          Join Match!
        </button>
      {{/if}}
    </div>
  </div>
</div>
