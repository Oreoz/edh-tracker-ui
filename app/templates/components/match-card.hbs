<h5 class="match-title">
  {{match.name}}
  <span class="badge badge-default pull-right">{{match.displaySize}}</span>
</h5>

<div class="pull-right">
  {{#if currentUserIsInMatch}}
    {{#link-to 'matches.show' match.id tagName="button" class="btn btn-secondary"}}
      Re-Enter Match!
    {{/link-to}}
  {{else}}
    <button class="btn btn-secondary btn-join-match" disabled={{match.full}} {{action 'join'}}>
      Join
    </button>
  {{/if}}
</div>
